@model IEnumerable<EntityLayer.Concrete.Blog>

@{
    ViewBag.Title = "AuthorBlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





@{ string color = " ";}
@{ string casename = " ";}

<!DOCTYPE html>

<html>
<body class="hold-transition sidebar-mini">
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Bloglarım</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                ID
                            </th>
                            <th style="width: 20%">
                                Blog Başlığı
                            </th>

                            <th>
                                Blog Değerlendirmesi
                            </th>
                            <th style="width: 8%" class="text-center">
                                Durum
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.BlogRating >= 85)
                            {
                                color = "post-category text-white bg-success";
                                casename = "Çok İyi";
                            }
                            if (item.BlogRating >= 70 && item.BlogRating <= 70)
                            {
                                color = "post-category text-white bg-info mb-3";
                                casename = "Başarılı";
                            }
                            if (item.BlogRating >= 50 && item.BlogRating <= 69)
                            {
                                color = "post-category text-white bg-warning mb-3";
                                casename = "Fena Değil";
                            }
                            if (item.BlogRating >= 0 && item.BlogRating <= 49)
                            {
                                color = "post-category text-white bg-danger mb-3";
                                casename = "Başarısız";
                            }

                            <tr>
                                <td>@item.BlogID</td>
                                <td>@item.BlogTitle</td>

                                <td class="project_progress">
                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="@item.BlogRating" aria-volumemin="0" aria-volumemax="100" style="width: @item.BlogRating%">
                                        </div>
                                    </div>
                                    <small>
                                        %  @item.BlogRating
                                    </small>
                                </td>
                                <td class="project-state">
                                    <span class="badge @color">@casename</span>
                                </td>
                                <td class="project-actions text-right">

                                    <a class="btn btn-info btn-sm" href="/Blog/UpdateBlog/@item.BlogID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    
</body>
</html>
